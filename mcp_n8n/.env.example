# Base URL for your n8n instance (Docker defaults to http://localhost:5678)
N8N_MCP_BASE_URL=http://localhost:5678

# Option 1: API key authentication (recommended when available)
# N8N_MCP_API_KEY=replace-with-api-key

# Option 2: Basic authentication (only used if both user and password are set)
# N8N_MCP_USERNAME=owner@example.com
# N8N_MCP_PASSWORD=super-secret

# Disable TLS verification for self-signed certificates (set to "false")
# N8N_MCP_VERIFY_SSL=true

# Request timeout in seconds
# N8N_MCP_TIMEOUT=30
